---
import BlogListLayout from "../layouts/BlogListLayout.astro";
import { getFormattedTags } from "../utils/getFormattedTags";
import { sortPosts } from "../utils/sortPosts";

const posts = sortPosts(await Astro.glob("./blog/*.{md,mdx}"));
const tags = getFormattedTags(posts);
---

<BlogListLayout
  title="Blog"
  description="My thoughts on software development"
  posts={posts}
  tags={tags}
/>
