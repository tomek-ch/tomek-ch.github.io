---
import { HeroLayout } from "../components/HeroLayout";
import { Link } from "../components/Link";
import { PostContent } from "../components/PostContent";
import { ProjectHero } from "../components/ProjectHero";
import type { ProjectMeta } from "../utils/types";
import Layout from "./Layout.astro";

export type Props = { content: ProjectMeta & { url: string } };

const { content } = Astro.props;
---

<Layout title={content.title} description={content.description}>
  <ProjectHero project={content} />
  <PostContent className="mx-auto py-20">
    <slot />
  </PostContent>
</Layout>
