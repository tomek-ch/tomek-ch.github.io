---
import { Author } from "../components/Author";
import AsideLayout from "./AsideLayout.astro";

export type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<AsideLayout title={title} description={description}>
  <slot />
  <Author slot="aside" />
  <slot name="aside" slot="aside" />
</AsideLayout>
